<!-- 100% Width & Height container  -->
<div class="login-fullwidith">
    <!-- Login Wrap  -->
    <div class="login-wrap">
        <img src="images/logo.png" class="login-img" alt="logo" />
        <br/>
        <div class="register-c1">
            <div class="cpaddingleftright50">
                <br/>
                <div ng-if="errorMessage">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> {{errorMessage}}
                    </div>
                </div>
                <h3>Register</h3>
                <!-- TODO: Username no mÃ­nimo-->
                <input ng-model="user.email" type="email" class="form-control logpadding" name="email" placeholder="Email" required>
                <br/>
                <input ng-model="user.password" type="password" class="form-control logpadding" name="password" placeholder="Password" id="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{6,}$" required title="5 characters minimum" required>
                <br/>
                <input ng-model="user.confirmPassword" type="password" class="form-control logpadding" name="confirm_password" placeholder="Confirm password" id="confirm_password" required/>
                <br/>
            </div>
        </div>
        <div class="register-c2">
            <div class="logmargfix">
                <div class="cpaddingleftright50">
                    <div class="alignbottom">
                        <button class="bluebtn margtop20" id="submitButton" type="submit" ng-click="register()" disabled>Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Login Wrap  -->
</div>
<!-- End of Container  -->
<script>
$('#confirm_password').on('keyup', function() {
    if ($(this).val() == $('#password').val()) {
        $('#submitButton').prop("disabled", false);
        $('#confirm_password').css('border', '2px solid green');
    } else {
        $('#submitButton').prop("disabled", false);
        $('#confirm_password').css('border', '2px solid red');
    }
});
</script>
<script src="../assets/js/initialize-loginpage.js"></script>
