<!-- 100% Width & Height container  -->
<div class="login-fullwidith">
    <!-- Login Wrap  -->
    <div class="login-wrap">
        <a href="http://ec2-52-36-104-49.us-west-2.compute.amazonaws.com:3000/" target="_blank"><img src="images/logo.png" class="login-img" alt="logo" /></a>
        <br/>
        <div class="login-c1">
            <div class="cpadding50">
                <br/>
                <div ng-if="errorMessage">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> {{errorMessage}}
                    </div>
                </div>
                <input ng-model="user.email" type="email" class="form-control logpadding" placeholder="email" required>
                <br/>
                <input id="password" ng-model="user.password" type="password" class="form-control logpadding" placeholder="Password" required>
            </div>
        </div>
        <div class="login-c2">
            <div class="logmargfix">
                <div class="chpadding50">
                    <div class="alignbottom">
                        <button class="bluebtn margtop20" type="submit" ng-click="toogle ? login() : forgetPassword()">Submit</button>
                    </div>
                    <div class="alignbottom2">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">Remember
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="login-c3">

            <div class="left">
                <a href="http://ec2-52-36-104-49.us-west-2.compute.amazonaws.com:3000/" class="whitelink"><span></span>Website</a>
            </div>
            <div ng-click="toogle = !toogle" class="right" id="lostpassword"><a href="#" class="whitelink">Lost password?</a></div>
        </div>
    </div>
    <pre>{{toogle}}</pre>
</div>
<!-- Javascript  -->
<script src="../assets/js/initialize-loginpage.js"></script>
<script src="../assets/js/jquery.easing.js"></script>
<!-- Load Animo -->
<script src="../plugins/animo/animo.js"></script>
<script>
function errorMessage() {
    $('.login-wrap').animo({
        animation: 'tada'
    });
}
</script>

<script>
    $(document).ready(function(){
        $('#lostpassword').click(function(){
            if ($('#lostpassword a').text() != "Login"){
                $('#password').hide();
                $('#lostpassword a').text("Login");
            } else {
                $('#password').show();
                $('#lostpassword a').text("Lost password?");
            }
        });
    });
</script>
