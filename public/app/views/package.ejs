                        <li>Rating*</li>
                        </br>
                        <li>Title</li>
                        </br>
                        <li>Comment</li>
                    </ul>
                </div>
                <form>
                    <div class="wh66percent right offset-0">
                        <div class="padding20 jslidetext2">
                            <input ng-model="newReview.rating" type="radio" name="rating" value="5" required>
                            <label>5</label>
                            <input ng-model="newReview.rating" type="radio" name="rating" value="4">
                            <label>4</label>
                            <input ng-model="newReview.rating" type="radio" name="rating" value="3">
                            <label>3</label>
                            <input ng-model="newReview.rating" type="radio" name="rating" value="2">
                            <label>2</label>
                            <input ng-model="newReview.rating" type="radio" name="rating" value="1">
                            <label>1</label>
                            </br>
                            </br>
                            <input ng-model="newReview.title" type="text" name="title" class="form-control margtop10" placeholder="A brief description of your experience">
                            </br>
                            <textarea ng-model="newReview.comment" name="comment" class="form-control margtop10" rows="3" placeholder="Explain your rating"></textarea>
                            <div class="clearfix"></div>
                            <div ng-if="errorMessage">
                                <br/>
                                <div class="alert alert-warning">
                                    <strong>Info:</strong> {{errorMessage}}
                                </div>
                            </div>
                            <button ng-click="insertNewReview(newReview)" type="submit" class="btn-search4 margtop20">Submit</button>
                            <br/>
                        </div>
                    </div>
                </form>
