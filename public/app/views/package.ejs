                <input id="map-canvaslat" type="text" value="{{ packageOnUse.lat }}">
                <input id="map-canvaslng" type="text" value="{{ packageOnUse.lng }}">
            </div>
            <div class="panel" ng-show="tab === 3">
                <h4 class="opensans dark size16 bold">Reviews</h4>
                <p></p>
                <div class="line2"></div>
                <div>
                    <div ng-repeat="review in reviews" class="hpadding20">
